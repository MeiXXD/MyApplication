<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/rly_user_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user_info_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/txt_user_info_name"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_user_info_image"
            android:gravity="center"
            android:textSize="60dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_user_info_password1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/rly_user_info"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/activity_user_info_modify_user_password"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_user_info_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rly_user_info"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/txt_user_info_password1"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_user_info_isvip1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_user_info_password1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/activity_user_info_modify_isvip"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_user_info_isvip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_user_info_password"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txt_user_info_isvip1"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_user_info_phone1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_user_info_isvip1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/activity_user_info_modify_user_phone"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_user_info_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_user_info_isvip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txt_user_info_phone1"
        android:gravity="center_horizontal"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_user_info_email1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_user_info_phone1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/activity_user_info_modify_user_email"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_user_info_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_user_info_phone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txt_user_info_email1"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_user_info_address1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@id/txt_user_info_email1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/activity_user_info_modify_user_adress"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_user_info_address"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/edt_user_info_email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txt_user_info_address1"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_user_info_address"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_user_info_modify_cancel_modify"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="@string/activity_user_info_modify_cancel_modify"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_user_info_modify_submit_modify"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="@string/activity_user_info_modify_submit_modify"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>