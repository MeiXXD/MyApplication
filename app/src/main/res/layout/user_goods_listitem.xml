<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_user_goods_goods_image"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/goods" />

    <TextView
        android:id="@+id/txt_user_goods_goods_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_user_goods_goods_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_user_goods_goods_image"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_user_goods_goods_brief_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_user_goods_goods_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_user_goods_goods_image"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_user_goods_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_user_goods_goods_brief_description"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/btn_user_goods_add_to_shopping_cart"
        android:layout_toRightOf="@id/img_user_goods_goods_image"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_user_goods_add_to_shopping_cart"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_user_goods_goods_brief_description"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/activity_user_goods_add_to_shopping_cart"
        android:textSize="16dp" />

</RelativeLayout>