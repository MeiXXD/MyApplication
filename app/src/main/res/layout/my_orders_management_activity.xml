<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_user_goods_goods_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/activity_my_order_management_order_search"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center|left"
            android:text="@string/activity_my_order_management_order_status"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner_my_order_management_order_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:spinnerMode="dialog"></Spinner>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_my_order_management_my_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>