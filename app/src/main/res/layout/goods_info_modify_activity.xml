<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/img_goods_info_modify_goods_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/goods_add_image" />

    <EditText
        android:id="@+id/edt_goods_info_modify_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/img_goods_info_modify_goods_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_goods_info_modify_goods_image"
        android:gravity="center_vertical"
        android:hint="@string/activity_goods_info_modify_goods_name"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edt_goods_info_modify_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edt_goods_info_modify_goods_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_goods_info_modify_goods_image"
        android:gravity="center_vertical"
        android:hint="@string/activity_goods_info_modify_goods_price"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txt_goods_info_modify_goods_amounts"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/img_goods_info_modify_goods_image"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/activity_goods_info_modify_goods_amounts"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_goods_info_modify_goods_amounts"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/txt_goods_info_modify_goods_amounts"
        android:layout_alignParentRight="true"
        android:layout_below="@id/img_goods_info_modify_goods_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txt_goods_info_modify_goods_amounts"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txt_goods_info_modify_goods_kind"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_goods_info_modify_goods_amounts"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/activity_goods_info_modify_goods_kind"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_goods_info_modify_goods_kind"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/txt_goods_info_modify_goods_kind"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edt_goods_info_modify_goods_amounts"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txt_goods_info_modify_goods_kind"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txt_goods_info_modify_goods_brief_description"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_goods_info_modify_goods_kind"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/activity_goods_info_modify_goods_brief_description"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_goods_info_modify_goods_brief_description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/txt_goods_info_modify_goods_brief_description"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edt_goods_info_modify_goods_kind"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txt_goods_info_modify_goods_brief_description"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txt_goods_info_modify_goods_description"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_below="@id/txt_goods_info_modify_goods_brief_description"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/activity_goods_info_modify_goods_description"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_goods_info_modify_goods_description"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignBottom="@id/txt_goods_info_modify_goods_description"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edt_goods_info_modify_goods_brief_description"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txt_goods_info_modify_goods_description"
        android:gravity="start" />

    <Button
        android:id="@+id/btn_goods_info_modify_modify"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/edt_goods_info_modify_goods_description"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/activity_goods_info_modify_modify"
        android:textSize="20dp" />
</RelativeLayout>