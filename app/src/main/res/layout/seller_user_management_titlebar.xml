<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#3F51B5">

    <TextView
        android:id="@+id/txt_admin_management"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center"
        android:singleLine="true"
        android:text="@string/activity_seller_user_management_titlebar_admin_management"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_admin_logout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_orange_dark"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/activity_seller_user_management_titlebar_admin_logout"
        android:textSize="18dp" />

</RelativeLayout>